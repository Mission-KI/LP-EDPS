{
    "$defs": {
        "DataSetCompression": {
            "enum": [
                "None",
                "gzip",
                "zip",
                "tar.gz",
                "7zip"
            ],
            "title": "DataSetCompression",
            "type": "string"
        },
        "DataSetImmutability": {
            "enum": [
                "immutable",
                "not-immutable"
            ],
            "title": "DataSetImmutability",
            "type": "string"
        },
        "DataSetStructure": {
            "enum": [
                "structured (CSV)",
                "semi-structured (xml/json)",
                "image",
                "video",
                "audio",
                "documents"
            ],
            "title": "DataSetStructure",
            "type": "string"
        },
        "DataSetTransfer": {
            "enum": [
                "static",
                "frequent"
            ],
            "title": "DataSetTransfer",
            "type": "string"
        },
        "DataSetVolume": {
            "enum": [
                "MB",
                "GB",
                "TB",
                "PB"
            ],
            "title": "DataSetVolume",
            "type": "string"
        },
        "DataSpace": {
            "properties": {
                "name": {
                    "title": "Name",
                    "type": "string"
                },
                "url": {
                    "description": "URL of the dataspace",
                    "title": "Url",
                    "type": "string"
                }
            },
            "required": [
                "url"
            ],
            "title": "DataSpace",
            "type": "object"
        },
        "NumericColumn": {
            "properties": {
                "name": {
                    "description": "Name of the column",
                    "title": "Name",
                    "type": "string"
                },
                "min": {
                    "anyOf": [
                        {
                            "type": "number"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null,
                    "title": "Min"
                },
                "max": {
                    "anyOf": [
                        {
                            "type": "number"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null,
                    "title": "Max"
                },
                "stddev": {
                    "anyOf": [
                        {
                            "type": "number"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "default": null,
                    "title": "Stddev"
                },
                "data_type": {
                    "$ref": "#/$defs/NumericColumnTypes"
                }
            },
            "required": [
                "name",
                "data_type"
            ],
            "title": "NumericColumn",
            "type": "object"
        },
        "NumericColumnTypes": {
            "enum": [
                "int",
                "float"
            ],
            "title": "NumericColumnTypes",
            "type": "string"
        },
        "TimeFieldColumn": {
            "properties": {
                "name": {
                    "description": "Name of the column",
                    "title": "Name",
                    "type": "string"
                },
                "granularity": {
                    "anyOf": [
                        {
                            "type": "integer"
                        },
                        {
                            "type": "null"
                        }
                    ],
                    "title": "Granularity"
                }
            },
            "required": [
                "name",
                "granularity"
            ],
            "title": "TimeFieldColumn",
            "type": "object"
        }
    },
    "properties": {
        "data_space": {
            "$ref": "#/$defs/DataSpace"
        },
        "volume": {
            "$ref": "#/$defs/DataSetVolume",
            "description": "Volume of the dataset"
        },
        "transfer": {
            "$ref": "#/$defs/DataSetTransfer",
            "description": "Is the dataset frequently updated, or static"
        },
        "frequency": {
            "description": "If transfer is frequent, this parameter gives the update frequency",
            "title": "Frequency",
            "type": "integer"
        },
        "growth_rate": {
            "anyOf": [
                {
                    "$ref": "#/$defs/DataSetVolume"
                },
                {
                    "type": "null"
                }
            ],
            "default": null,
            "description": "If transfer is frequent, this parameter gives the growth rate of the dataset per day"
        },
        "immutability": {
            "$ref": "#/$defs/DataSetImmutability",
            "description": "Is the dataset immutable"
        },
        "structure": {
            "$ref": "#/$defs/DataSetStructure",
            "description": "Structure of the dataset"
        },
        "compression": {
            "$ref": "#/$defs/DataSetCompression",
            "description": "Compression of the dataset"
        },
        "columns": {
            "description": "The dataset's columns",
            "items": {
                "anyOf": [
                    {
                        "$ref": "#/$defs/NumericColumn"
                    },
                    {
                        "$ref": "#/$defs/TimeFieldColumn"
                    }
                ]
            },
            "title": "Columns",
            "type": "array"
        }
    },
    "required": [
        "data_space",
        "volume",
        "transfer",
        "frequency",
        "immutability",
        "structure",
        "compression",
        "columns"
    ],
    "title": "EDPSchema",
    "type": "object"
}
